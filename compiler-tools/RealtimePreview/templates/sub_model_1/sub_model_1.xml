<?xml version="1.0" encoding="utf-8"?>
<VHLayout
        action="action"
        orientation="V"
        autoDimDirection="X"
        autoDimX="231"
        autoDimY="325"
        flag="flag_exposure|flag_clickable"
        layoutHeight="wrap_content"
        layoutWidth="match_parent"
        background="white">

    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="wrap_content"
            autoDimDirection="X"
            autoDimX="1"
            autoDimY="1">
        <NImage
                id="1"
                src="${imgUrl}"
                layoutHeight="match_parent"
                layoutWidth="match_parent"/>
    </FrameLayout>
    <NText
            text="${title}"
            layoutHeight="wrap_content"
            layoutMarginTop="10"
            layoutMarginLeft="6"
            ellipsize="end"
            layoutWidth="wrap_content"
            maxLines="1"
            textColor="${style.onePlusThreetextColor}"
            textSize="11"/>

    <VText
            text="${price}"
            layoutHeight="wrap_content"
            layoutMarginTop="4"
            layoutMarginBottom="4"
            layoutMarginLeft="6"
            layoutWidth="wrap_content"
            textColor="#FF0036"
            textSize="11"/>
</VHLayout>